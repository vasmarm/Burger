
<!--  UNDVOURED -->
<div class="row">
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit button"> {{this.burger_name}}</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>


<!-- DEVOURED -->
<div class="row">
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          <button type="submit button" disabled> {{this.burger_name}} </button>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>


<!-- ADD A BURGER -->
<div class="row">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/burgers" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name" placeholder="Type Burger Name">
    </div>

    <button type="submit button">Add Burger</button>
  </form>
</div>





